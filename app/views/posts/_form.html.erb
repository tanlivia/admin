<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <!-- <div class="alert alert-block"> -->
      <!-- <button type="button" class="close" data-dismiss="alert">&times;</button> -->
      <% str = @post.errors.full_messages.map(&:inspect).join(', ') %>
      <p class="alert alert-danger"><%= pluralize(@post.errors.count, "error") %> are found:<%= str %></p>
    <!-- </div> -->
      <!-- <p class="alert">Post was successfully created.</p> -->
  <% end %>

  <div class="form-group">
    <%= f.label '题目' %><br />
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label '内容' %><br />
    <%= f.text_area :body, :class=>"form-control"%>
  </div>
  <button type="submit" class="btn btn-primary">提交</button>

 
<% end %>
