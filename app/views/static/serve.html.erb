$(document).ready(function() {
  $('#carousel-example-generic').carousel({
    interval: 8000
  });

  var titles = {
    "item1": "为中小型企业提供法律和财务系统咨询", 
    "item2": "为公司和企业担任长年法律及财务顾问", 
    "item3": "设立及解散公司", 
    "item4": "财产规划，遗嘱及信托撰写", 
    "item5": "设置公司财务系统及会计软件(QuickBooks)培训，公司记账，财务报表，代办薪资税和营业税", 
    "item6": "个人和公司报税及规划", 
    "item7": "财务，法律文件翻译"
  }

  $('#carousel-example-generic').on('slid.bs.carousel', function(e) {
      setTitle();
  })

  function setTitle() {
    $("#page-title").html(titles[$("#carousel-example-generic .active").attr('id')])
  }
})

</script>